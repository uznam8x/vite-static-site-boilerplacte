{% macro popover(props = {}) %}
  {% set slot = caller() | slots %}

  <div
    x-data="{ open: false }"
    @keydown.escape.stop="open = false"
    @click.away="open = false"
    class="relative inline-block"
  >
    {# Trigger #}
    {{ slot.trigger | safe }}

    {# Content #}
    <div
      x-show="open"
      x-transition:enter="transition ease-out duration-200"
      x-transition:enter-start="opacity-0 translate-y-1"
      x-transition:enter-end="opacity-100 translate-y-0"
      x-transition:leave="transition ease-in duration-150"
      x-transition:leave-start="opacity-100 translate-y-0"
      x-transition:leave-end="opacity-0 translate-y-1"
      class="data-[side=bottom]:slide-in-from-top-2 data-[side=left]:slide-in-from-right-2 data-[side=right]:slide-in-from-left-2 data-[side=top]:slide-in-from-bottom-2 absolute left-0 z-50 max-h-[var(--radix-popover-content-height)] w-[--radix-popover-content-width] min-w-[8rem] overflow-hidden rounded-md border bg-popover text-popover-foreground shadow-md"
      style="display: none; --radix-popover-content-width: 200px; --radix-popover-content-height: 200px;"
    >
      <div class="h-full overflow-y-auto p-4">{{ slot.default | safe }}</div>
    </div>
  </div>
{% endmacro %}
