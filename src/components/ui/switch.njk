{% macro switch(props = {}) %}
  <button
    type="button"
    role="switch"
    aria-checked="{{ 'true' if props.checked else 'false' }}"
    x-data="{ checked: {{ 'true' if props.checked else 'false' }} }"
    x-bind:aria-checked="checked.toString()"
    @click="checked = !checked"
    {% if props.disabled %}disabled{% endif %}
    class="{{ props.class }} peer inline-flex h-[24px] w-[44px] shrink-0 cursor-pointer items-center rounded-full border-2 border-transparent transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 focus-visible:ring-offset-background disabled:cursor-not-allowed disabled:opacity-50 data-[state=checked]:bg-primary data-[state=unchecked]:bg-input"
    x-bind:class="{ 'bg-primary': checked, 'bg-input': !checked }"
  >
    <span
      class="pointer-events-none block h-5 w-5 rounded-full bg-background shadow-lg ring-0 transition-transform data-[state=checked]:translate-x-5 data-[state=unchecked]:translate-x-0"
      x-bind:class="{ 'translate-x-5': checked, 'translate-x-0': !checked }"
    ></span>
  </button>
{% endmacro %}
